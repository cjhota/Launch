{% extends "layout.njk" %}
{% block content %}
    <div
        class="card">
        {# no-repeat center center / cover configuração complementar da imagem #}
        <section class="avatar" style=" background: url('{{ student.avatar_url }}'); "></section>
        <section class="details">
            <h3>Teacher Details</h3>
            <div class="item">
                <div>Nome completo</div>
                <div>{{ student.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ student.birth }}</div>
            </div>
             <div class="item">
                <div>E-mail</div>
                <div>{{ student.email }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ student.select }}</div>
            </div>
            <div class="item">
                <div>Tipo de Ensino</div>
                <div>
                    <span>
                        {{ "Presencial" if student.typeofclass == "presencial"  else "À
          distância" }}
                    </span>
                </div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in student.services %}
                        <span>
                            {{ service }}
                        </span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Tipo Sanguíneo</div>
                <div>{{ student.blood }}</div>
            </div>
            <div class="item">
                <div>Altura</div>
                <div>{{ student.weight }}</div>
            </div>
            <div class="item">
                <div>Peso</div>
                <div>{{ student.height }}</div>
            </div>
            <a href="/students/{{ student.id }}/edit" class="button">Editar</a>
        </section>
    </div>
{% endblock content %}