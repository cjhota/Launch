{% extends "layout.njk" %}
{% block content %}
    <div class="card">
        <section class="avatar" style=" background: url('{{ teachers.avatar_url }}') no-repeat center center / cover; "></section>
        <section class="details">
            <h3>Teacher Details</h3>
            <div class="item">
                <div>Nome completo</div>
                <div>{{ teachers.name }}</div>
            </div>
            <div class="item">
                <div>Idade</div>
                <div>{{ teachers.birth }}</div>
            </div>
            <div class="item">
                <div>Grau de escolaridade</div>
                <div>{{ teachers.select }}</div>
            </div>
            <div class="item">
                <div>Tipo de Ensino</div>
                <div>
                    <span>
                        {{ "Presencial" if teacher.typeofclass == "presencial"  else "À
          distância" }}
                    </span>
                </div>
            </div>
            <div class="item">
                <div>Acompanhamento</div>
                <div>
                    {% for service in teacher.services %}
                        <span>
                            {{ service }}
                        </span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Desde</div>
                <div>{{ teachers.created_at }}</div>
            </div>
        </section>
    </div>
{% endblock content %}